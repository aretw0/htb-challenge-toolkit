{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Create New HTB Challenge",
      "type": "shell",
      "command": "./bin/create_challenge.sh ${input:challengeName}",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [],
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "windows": {
        "command": ".\\bin\\create_challenge.sh ${input:challengeName}"
      }
    },
    {
      "label": "Lint All Files",
      "type": "shell",
      "command": "make lint",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ],
  "inputs": [
    {
      "id": "challengeName",
      "type": "promptString",
      "description": "Enter the name of the new HTB challenge (e.g., 'cap', 'optimus'):",
      "default": "new_challenge"
    }
  ]
}
