{
	"name": "Hack The Box - Pentest Environment",
	"build": {
		"dockerfile": "../docker/Dockerfile"
	},
	"runArgs": [
		"--cap-add=NET_ADMIN",
		"--device=/dev/net/tun",
		"--security-opt",
		"label:disable",
		"--privileged"
	],
	"containerEnv": {
		"OVPN_CONFIG_FILE": "${localEnv:OVPN_CONFIG_FILE}" # Carrega OVPN_CONFIG_FILE do .env do host
	},
	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": []
		}
	},
	"postStartCommand": "/usr/local/bin/start_vpn.sh"
}