{
	"name": "Hack The Box - Pentest Environment",
	"build": {
		"dockerfile": "../docker/Dockerfile"
	},
	"runArgs": [
		"--cap-add=NET_ADMIN",
		"--device=/dev/net/tun",
		"--security-opt",
		"label:disable",
		"--privileged"
	],
	"customizations": {
		"vscode": {
			"settings": {},
			"extensions": [
				"ms-vscode.makefile-tools",
				"google.geminicodeassist",
				"MermaidChart.vscode-mermaid-chart",
				"DavidAnson.vscode-markdownlint"
			]
		}
	}
}